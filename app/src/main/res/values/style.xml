<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="fontPath">font/SVN-Aguda Bold.otf</item>
        <item name="android:listSelector">#00ff00</item>

    </style>
    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">font/SVN-Aguda Bold.otf</item>
    </style>
    <!-- ActionBar style -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">

        <item name="android:background">#b3000000</item>
        <!-- Support library compatibility -->
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for the navigation drawer icon -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/cardview_light_background</item>
    </style>

    <style name="ToggleSwitchTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColor">@color/colorPrimary</item>
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#337D86</item>

        <item name="android:paddingTop">20dp</item>
        <item name="android:switchMinWidth">80dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAllCaps">true</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorPrimary</item>
    </style>
</resources>
