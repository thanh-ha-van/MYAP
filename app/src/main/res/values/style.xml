<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle"
            tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="fontPath">font/SVN-Aguda Bold.otf</item>
        <item name="android:listSelector">@color/green</item>

    </style>
    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">font/SVN-Aguda Bold.otf</item>
    </style>

    <!-- ActionBar style -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">

        <item name="android:background">#FFFFFFFF</item>
        <!-- Support library compatibility -->
        <item name="background">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>

    <style name="AppTheme.Waiting">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>

    <style name="ToggleSwitchTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColor">@color/white</item>
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <item name="android:paddingTop">20dp</item>
        <item name="android:switchMinWidth">60dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAllCaps">true</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorPrimaryDark</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorPrimaryDark</item>
    </style>


</resources>
