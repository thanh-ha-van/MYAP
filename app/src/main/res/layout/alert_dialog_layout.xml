<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white"
    android:padding="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_gravity="center"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:background="@drawable/plate_dark"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

    <TextView
        android:text="Content"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/tv_content"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        app:srcCompat="@drawable/ic_check_circle_black"
        android:id="@+id/btn_ok_dialog"
        android:layout_below="@+id/tv_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/button_selector"
        app:srcCompat="@drawable/ic_ok"
        android:id="@+id/title_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Title"
        android:textSize="17sp"
        android:textAllCaps="true"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/tv_title"
        android:layout_alignBottom="@+id/title_icon"
        android:layout_alignEnd="@+id/tv_content"
        android:layout_toEndOf="@+id/title_icon"
        android:layout_alignTop="@+id/title_icon" />
        </RelativeLayout>
</RelativeLayout>