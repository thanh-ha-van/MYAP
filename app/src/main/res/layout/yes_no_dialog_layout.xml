<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle"
    android:padding="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_gravity="center"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:background="@drawable/plate_dark"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/button_selector"
        app:srcCompat="@drawable/ic_help_black"
        android:id="@+id/title_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Title"
        android:textSize="17sp"
        android:textAllCaps="true"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/tv_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/title_icon" />


    <TextView
        android:text="Content"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/tv_content"
        android:layout_below="@+id/title_icon"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/tv_content">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_selector"
            app:srcCompat="@drawable/ic_cancel"
            android:id="@+id/btn_cancel"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_selector"
            app:srcCompat="@drawable/ic_check_circle_black"
            android:id="@+id/btn_ok"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btn_cancel"
            android:layout_marginEnd="39dp" />
    </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>